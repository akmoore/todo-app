<p id="notice"><%= notice %></p>

<h1 class="text-center">User Tasks</h1>
<br><br>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div id="task-form"></div>

      <div id="tasks">
        <%= render @user_tasks %>
      </div>

      <br>

      <%= link_to new_user_task_path, remote: true do %>
        <button class="btn btn-default add-task">
          <%= fa_icon('plus')%> Add Task
        </button>
      <% end %>
    </div>
  </div>
</div>

