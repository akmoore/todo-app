if(isDown == false){
    tf.html("<%= j (render 'form') %>").addClass('down').slideDown(350,function(){
        isDown = true;
        nut.html('Never Mind.');
    }); 
}else{
    nut.on('click', function(){
        tf.removeClass('down').slideUp(350, function(){
            isDown = false;
            nut.html('New User Task');
        });
    })
}

